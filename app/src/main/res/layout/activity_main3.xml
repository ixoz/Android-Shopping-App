<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:padding="16dp">


    <TextView
        android:id="@+id/userViewDisplay"
        android:layout_gravity="right"
        android:layout_width="167dp"
        android:layout_height="73dp"
        android:paddingBottom="10dp"
        android:text="Username"
        android:textSize="34sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/productImage1"
            android:layout_width="123dp"
            android:layout_height="163dp"
            android:contentDescription="Smartphone"
            android:src="@drawable/smartphone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/productName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redmi Note 11"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹12999"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/quantityInput1"
                android:layout_width="77dp"
                android:layout_height="61dp"
                android:hint="Qty"
                android:inputType="number" />

            <Button
                android:id="@+id/addToCartButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="227dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/productImage2"
            android:layout_width="140dp"
            android:layout_height="192dp"
            android:contentDescription="Headphones"
            android:src="@drawable/headphones" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/productName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JBL Wireless"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹3500"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/quantityInput2"
                android:layout_width="71dp"
                android:layout_height="64dp"
                android:hint="Qty"
                android:inputType="number" />

            <Button
                android:id="@+id/addToCartButton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/productImage3"
            android:layout_width="155dp"
            android:layout_height="157dp"
            android:contentDescription="Elone Product"
            android:src="@drawable/elone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/productName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elone"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productPrice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹3400000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/quantityInput3"
                android:layout_width="83dp"
                android:layout_height="64dp"
                android:hint="Qty"
                android:inputType="number" />

            <Button
                android:id="@+id/addToCartButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
